{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BARAS",
  "version": "2026.1.3",
  "identifier": "com.pdubs.io",
  "build": {
    "beforeDevCommand": "dx serve --port 1420",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dx bundle --release",
    "frontendDist": "../dist/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BARAS - Battle Analysis and Raid Assessment System",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "maxWidth": 1920,
        "maxHeight": 1080,
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "appimage",
      "deb",
      "nsis"
    ],
    "externalBin": [
      "binaries/baras-parse-worker"
    ],
    "resources": {
      "../../core/definitions/effects/*": "definitions/effects/",
      "../../core/definitions/encounters/**/*": "definitions/encounters/",
      "../../core/definitions/sounds/**/*": "definitions/sounds/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "SWTOR Combat Log Parser",
    "longDescription": "A fast, efficient combat log parser for Star Wars: The Old Republic with real-time overlay support.",
    "category": "Game",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUyRjZFQjQzRUY4NzI0OUMKUldTY0pJZnZRK3YyNGxHZVd1VFV0RmZRMEtTbXY3WXdHcEcrenVoNE5LQTJOZktDT0Y3SU83aWQK",
      "endpoints": [
        "https://raw.githubusercontent.com/baras-app/baras/master/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
